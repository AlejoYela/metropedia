---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Metropedia.">
    <div class="bg-secondary">
        <div class="flex justify-center h-screen">
            <div
                class="hidden bg-cover lg:block lg:w-2/3"
                style="background-image: url(/vernier.png)"
            >
                <div
                    class="flex items-center h-full px-20 bg-secondary bg-opacity-40"
                >
                    <div>
                        <h2 class="text-3xl font-bold text-white sm:text-4xl">
                            Campus virtual de <span class="text-primary">METROPEDIA</span>
                        </h2>
                        <p
                            class="max-w-xl mt-3 text-[#9a9a9a] font-semibold text-xl"
                        >
                            Accede a todos los cursos de METROPEDIA, creados por
                            profesionales con alta experiencia, casos reales aplicados y
                            documentación actualizada.
                        </p>
                    </div>
                </div>
            </div>

            <div
                class="flex items-center w-full max-w-md px-6 mx-auto lg:w-2/6"
            >
                <div class="flex-1">
                    <div class="text-center">
                        <div class="flex justify-center mx-auto">
                            <img
                                class="metropedia w-auto h-20 sm:h-14"
                                src="/logocentrado.png"
                                alt=""
                            />
                        </div>
                        <p class="mt-3 text-white dark:text-gray-300">
                            Inicia sesión para acceder a tu cuenta
                        </p>
                    </div>

                    <div class="mt-8">
                        <form id="login-form">
                            <div>
                                <label
                                    for="email"
                                    class="block mb-2 text-sm text-[#9a9a9a] dark:text-gray-200"
                                >
                                    Correo electrónico
                                </label>
                                <input
                                    type="email"
                                    name="email"
                                    id="email"
                                    placeholder="ejemplo@correo.com"
                                    class="block w-full px-4 py-2 mt-2 text-[#9a9a9a] placeholder-gray-400 bg-white border border-gray-200 rounded-sm dark:placeholder-[#9a9a9a] dark:bg-[#191919] dark:text-gray-300 dark:border-[#9a9a9a] focus:border-[#ffcd61] dark:focus:border-[#ffcd61] focus:ring-[#ffcd61] focus:outline-none focus:ring focus:ring-opacity-40"
                                />
                            </div>

                            <div class="mt-6">
                                <div class="flex justify-between mb-2">
                                    <label
                                        for="password"
                                        class="text-sm text-[#9a9a9a] dark:text-gray-200"
                                    >
                                        Contraseña
                                    </label>
                                    <a
                                        href="#"
                                        class="text-sm text-gray-400 focus:text-primary hover:text-primary hover:underline"
                                    >
                                        ¿Olvidaste tu contraseña?
                                    </a>
                                </div>

                                <input
                                    type="password"
                                    name="password"
                                    id="password"
                                    placeholder="Tu contraseña"
                                    class="block w-full px-4 py-2 mt-2 text-[#9a9a9a] placeholder-gray-400 bg-white border border-gray-200 rounded-sm dark:placeholder-[#9a9a9a] dark:bg-[#191919] dark:text-gray-300 dark:border-[#9a9a9a] focus:border-[#ffcd61] dark:focus:border-[#ffcd61] focus:ring-[#ffcd61] focus:outline-none focus:ring focus:ring-opacity-40"
                                />
                            </div>

                            <div class="mt-6">
                                <button
                                    type="submit"
                                    class="w-full px-4 py-2 tracking-wide text-white transition-colors duration-300 transform bg-primary rounded-sm hover:bg-[#ffcd61] focus:outline-none focus:bg-[#ffcd61] focus:ring focus:ring-[#ffcd61] focus:ring-opacity-50"
                                >
                                    Iniciar sesión
                                </button>
                            </div>
                        </form>

                        <p class="mt-6 text-sm text-center text-gray-400">
                            ¿No tienes una cuenta? 
                            <a
                                href="/register/"
                                class="text-primary focus:outline-none focus:underline hover:underline"
                            >
                                Regístrate
                            </a>.
                        </p>
                        <p
                            id="error-message"
                            class="mt-4 text-sm text-center text-red-500 hidden"
                        >
                            Correo electrónico o contraseña incorrectos. Inténtalo de nuevo.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</Layout>

<script>
    async function validateLogin(event) {
        event.preventDefault(); // Evita el envío del formulario

        // Obtener valores de los campos
        const email = document.getElementById("email").value;
        console.log(email);
        
        const password = document.getElementById("password").value;
        console.log(password);
        
        const errorMessage = document.getElementById("error-message");
        console.log(errorMessage);
        

        try {
            // Hacer la solicitud al backend
            const response = await fetch("http://certificados-backend.onrender.com/api/auth/login", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json",
                },
                body: JSON.stringify({
                    email: email,
                    password: password,
                }),
            });

            if (!response.ok) {
                throw new Error("Credenciales inválidas");
            }

            const data = await response.json();
            errorMessage.classList.add("hidden"); // Ocultar mensaje de error si es visible
            console.log("Login exitoso! Redirigiendo...", data.user); // Mensaje de éxito en la consola
            window.location.href = "/campus/dashboard/"; // Redirigir al dashboard
        } catch (error) {
            console.log(error.message); // Mensaje de error en la consola
            errorMessage.classList.remove("hidden"); // Mostrar mensaje de error
            errorMessage.textContent = "Credenciales inválidas"; // Actualizar mensaje de error
        }
    }

    // Agregar el event listener para el formulario
    document.getElementById("login-form").addEventListener("submit", validateLogin);
</script>



<style>
    .about {
        margin: auto;
        color: white;
        line-height: 1.6;
    }

    .metropedia {
        -webkit-mask-image: linear-gradient(
                to right,
                transparent,
                black 30%,
                black 70%,
                transparent
            ),
            linear-gradient(
                to left,
                transparent,
                black 30%,
                black 70%,
                transparent
            );
        mask-image: linear-gradient(
                to right,
                transparent,
                black 30%,
                black 70%,
                transparent
            ),
            linear-gradient(
                to left,
                transparent,
                black 30%,
                black 70%,
                transparent
            );
    }

    .titulo {
        font-family: "Questrial", system-ui, sans-serif;
    }

    @keyframes bounce {
        0%,
        100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-10px);
        }
    }
    .bounce {
        animation: bounce 1s infinite;
    }
</style>
