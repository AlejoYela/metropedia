---
const {} = Astro.props;
import Layout from "../layouts/Layout.astro";
import CoursesPubli from "../components/CoursesPubli.astro";
import PopularCourses from "../components/PopularCourses.astro";
import CTACourses from "../components/CTACourses.astro";
import CoursesHero from "../components/CoursesHero.astro";
import Consult from "../components/Consult.astro";
---

<Layout title="Metropedia.">
  <CoursesHero />

  <div
    id="tabs"
    class="max-w-screen-xl mx-auto border-b border-gray-200 dark:border-gray-700"
  >
    <ul
      class="flex flex-wrap -mb-px text-sm font-medium text-center text-gray-500 dark:text-gray-400"
    >
      <li class="me-2">
        <a
          href="#"
          id="boton-inicio"
          class="tab-link inline-flex items-center justify-center p-4 border-b-2 border-transparent rounded-t-lg hover:text-gray-600 hover:border-primary dark:hover:text-primary group"
          >Inicio</a
        >
      </li>
      <li class="me-2">
        <a
          href="#"
          id="boton-cursos"
          class="tab-link inline-flex items-center justify-center p-4 border-b-2 border-transparent rounded-t-lg hover:text-gray-600 hover:border-gray-300 dark:hover:text-gray-300 group"
          >Cursos</a
        >
      </li>
      <li class="me-2">
        <a
          href="#"
          id="boton-certificados"
          class="tab-link inline-flex items-center justify-center p-4 border-b-2 border-transparent rounded-t-lg hover:text-gray-600 hover:border-gray-300 dark:hover:text-gray-300 group"
          >Certificados</a
        >
      </li>
    </ul>
  </div>

  <!-- Contenido de cada sección, oculto por defecto excepto el primer tab -->
  <div id="content-inicio" class="tab-content">
    <CoursesPubli />
    <PopularCourses />
    <CTACourses />
  </div>
  <div id="content-cursos" class="tab-content hidden">
    <PopularCourses />
  </div>
  <div id="content-certificados" class="tab-content hidden">
    <Consult />
  </div>
</Layout>

<style>
  .tab-content.hidden {
    display: none;
  }
  .tab-link.active {
    color: #fcb316;
    border-bottom: 2px solid #fcb316;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const tabLinks = document.querySelectorAll(".tab-link");
    const tabContents = document.querySelectorAll(".tab-content");

    tabLinks.forEach((link, index) => {
      link.addEventListener("click", (e) => {
        e.preventDefault();

        // Quitar la clase 'active' de todas las pestañas y contenido oculto
        tabLinks.forEach((link) => link.classList.remove("active"));
        tabContents.forEach((content) => content.classList.add("hidden"));

        // Agregar clase 'active' a la pestaña seleccionada y mostrar contenido correspondiente
        link.classList.add("active");
        tabContents[index].classList.remove("hidden");
      });
    });
  });
</script>

<style>
  .about {
    margin: auto;
    color: white;
    line-height: 1.6;
    position: relative;
    overflow: hidden;
  }
</style>
