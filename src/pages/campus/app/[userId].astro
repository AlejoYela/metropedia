---
import LayoutSidebar from '../../../components/campus/LayoutSidebar.astro';
import LandingReadme from '../../../components/campus/LandingReadme.astro';

const { userId } = Astro.params;

let userData = null;

try {
    const response = await fetch(
        `https://certificados-backend.onrender.com/api/certificates/${userId}`
    );
    if (response.ok) {
        userData = await response.json();
    } else {
        console.error("Usuario no encontrado o error en la solicitud.");
    }
} catch (error) {
    console.error("Error al obtener los datos del usuario:", error);
}
---

<LayoutSidebar userData={userData}>
	<LandingReadme userData={userData}/>
</LayoutSidebar>
