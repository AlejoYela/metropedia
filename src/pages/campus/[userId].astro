import "@fontsource-variable/inter";
import LogoMonoIcon from "../../icons/LogoMonoIcon.astro";
import NotebookIcon from "../../icons/NotebookIcon.astro";
import HomeIcon from "../../icons/HomeIcon.astro"
import ExploreIcon from "../../icons/ExploreIcon.astro";
import CertificateIcon from "../../icons/CertificateIcon.astro";
import courseData from "../../courseData";
import UserConfigIcon from "../../icons/UserConfigIcon.astro"
import UnlockIcon from "../../icons/UnlockIcon.astro"
import Schools from "../../components/Schools.astro";

const { userId } = Astro.params;

let userData = null;

try {
    const response = await fetch(
        `https://certificados-backend.onrender.com/api/certificates/${userId}`,
    );
    if (response.ok) {
        userData = await response.json();
    } else {
        console.error("Usuario no encontrado o error en la solicitud.");
    }
} catch (error) {
    console.error("Error al obtener los datos del usuario:", error);
}
