---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro'
import Skills from '../components/Skills.astro'
import Publi from '../components/Publi.astro';
import Graphics from '../components/Graphics.astro';

---

<Layout title="Metropedia.">
	<main>
		<section class=" flex items-center h-dvh bg-center bg-no-repeat bg-[url('https://raw.githubusercontent.com/AlejoYela/metropedia/main/public/imgs/1.png')] bg-[#252627] bg-blend-multiply">
			<Hero />
		</section>
		
		<section class= " py-5 h-[90dvh]">
			<Skills/>
		</section>

		<section class="h-dvh flex items-center">
			<Graphics/>
		</section>

		<section>
			<Publi/>
		</section>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	
</style>
