---
import Layout from "../layouts/Layout.astro";

let isLogin = true; // Iniciar en modo login
---

<Layout title="Metropedia.">
    <div class="bg-secondary">
        <div class="flex justify-center h-screen">
            <div class="hidden bg-cover lg:block lg:w-2/3" style="background-image: url(/vernier.png)">
                <div class="flex items-center h-full px-20 bg-secondary bg-opacity-40">
                    <div>
                        <h2 class="text-3xl font-bold text-white sm:text-4xl">
                            Campus virtual de <span class="text-primary">METROPEDIA</span>
                        </h2>
                        <p class="max-w-xl mt-3 text-[#9a9a9a] font-semibold text-xl">
                            Accede a todos los cursos de METROPEDIA, creados por profesionales con alta experiencia, casos reales aplicados y documentación actualizada.
                        </p>
                    </div>
                </div>
            </div>

            <div class="flex items-center w-full max-w-md px-6 mx-auto lg:w-2/6">
                <div class="flex-1">
                    <div class="text-center">
                        <div class="flex justify-center mx-auto">
                            <img class="metropedia w-auto h-20 sm:h-14" src="https://res.cloudinary.com/dc0aja7yx/image/upload/v1731012161/logocentrado_kj8zb5.png" alt="" />
                        </div>
                        <p class="mt-3 text-white dark:text-gray-300" id="form-title">
                            {isLogin ? "Inicia sesión para acceder a tu cuenta" : "Regístrate en METROPEDIA"}
                        </p>
                    </div>

                    <div class="mt-8" id="form-container">
                        <form id="register-form">
                            <div>
                                <label
                                    for="name"
                                    class="block mb-2 text-sm text-[#9a9a9a] dark:text-gray-200"
                                    >Nombre completo</label
                                >
                                <input
                                    type="text"
                                    name="name"
                                    id="name"
                                    placeholder="Tu nombre"
                                    class="block w-full px-4 py-2 mt-2 text-[#9a9a9a] placeholder-gray-400 bg-white border border-gray-200 rounded-sm dark:placeholder-[#9a9a9a] dark:bg-[#191919] dark:text-gray-300 dark:border-[#9a9a9a] focus:border-[#ffcd61] dark:focus:border-[#ffcd61] focus:ring-[#ffcd61] focus:outline-none focus:ring focus:ring-opacity-40"
                                />
                            </div>
                        
                            <div class="mt-4">
                                <label
                                    for="id"
                                    class="block mb-2 text-sm text-[#9a9a9a] dark:text-gray-200"
                                    >Cédula</label
                                >
                                <input
                                    type="text"
                                    name="id"
                                    id="id"
                                    placeholder="Número de cédula"
                                    class="block w-full px-4 py-2 mt-2 text-[#9a9a9a] placeholder-gray-400 bg-white border border-gray-200 rounded-sm dark:placeholder-[#9a9a9a] dark:bg-[#191919] dark:text-gray-300 dark:border-[#9a9a9a] focus:border-[#ffcd61] dark:focus:border-[#ffcd61] focus:ring-[#ffcd61] focus:outline-none focus:ring focus:ring-opacity-40"
                                />
                            </div>
                        
                            <div class="mt-4">
                                <label
                                    for="email"
                                    class="block mb-2 text-sm text-[#9a9a9a] dark:text-gray-200"
                                    >Correo electrónico</label
                                >
                                <input
                                    type="email"
                                    name="email"
                                    id="email"
                                    placeholder="ejemplo@correo.com"
                                    class="block w-full px-4 py-2 mt-2 text-[#9a9a9a] placeholder-gray-400 bg-white border border-gray-200 rounded-sm dark:placeholder-[#9a9a9a] dark:bg-[#191919] dark:text-gray-300 dark:border-[#9a9a9a] focus:border-[#ffcd61] dark:focus:border-[#ffcd61] focus:ring-[#ffcd61] focus:outline-none focus:ring focus:ring-opacity-40"
                                />
                            </div>
                        
                            <div class="mt-4">
                                <label
                                    for="password"
                                    class="block mb-2 text-sm text-[#9a9a9a] dark:text-gray-200"
                                    >Contraseña</label
                                >
                                <input
                                    type="password"
                                    name="password"
                                    id="password"
                                    placeholder="Tu contraseña"
                                    class="block w-full px-4 py-2 mt-2 text-[#9a9a9a] placeholder-gray-400 bg-white border border-gray-200 rounded-sm dark:placeholder-[#9a9a9a] dark:bg-[#191919] dark:text-gray-300 dark:border-[#9a9a9a] focus:border-[#ffcd61] dark:focus:border-[#ffcd61] focus:ring-[#ffcd61] focus:outline-none focus:ring focus:ring-opacity-40"
                                />
                            </div>
                        
                            <div class="mt-4">
                                <label
                                    for="confirm-password"
                                    class="block mb-2 text-sm text-[#9a9a9a] dark:text-gray-200"
                                    >Repetir contraseña</label
                                >
                                <input
                                    type="password"
                                    name="confirm-password"
                                    id="confirm-password"
                                    placeholder="Repite tu contraseña"
                                    class="block w-full px-4 py-2 mt-2 text-[#9a9a9a] placeholder-gray-400 bg-white border border-gray-200 rounded-sm dark:placeholder-[#9a9a9a] dark:bg-[#191919] dark:text-gray-300 dark:border-[#9a9a9a] focus:border-[#ffcd61] dark:focus:border-[#ffcd61] focus:ring-[#ffcd61] focus:outline-none focus:ring focus:ring-opacity-40"
                                />
                            </div>
                        
                            <div class="mt-6">
                                <button
                                    type="submit"
                                    class="w-full px-4 py-2 tracking-wide text-white transition-colors duration-300 transform bg-primary rounded-sm hover:bg-[#ffcd61] focus:outline-none focus:bg-[#ffcd61] focus:ring focus:ring-[#ffcd61] focus:ring-opacity-50"
                                >
                                    Registrarse
                                </button>
                            </div>
                        </form>                        
                        
                        <p id="error-message" class="mt-4 text-sm text-center text-red-500 hidden">
                            Correo electrónico o contraseña incorrectos. Inténtalo de nuevo.
                        </p>
                       
                        <p class="mt-6 text-sm text-center text-gray-400" id="toggle-link">
                            ¿Ya tienes una cuenta? 
                            <a href="/login/" class="text-primary focus:outline-none focus:underline hover:underline">
                                Inicia sesión
                            </a>.
                        </p>

                    </div>
                </div>
            </div>
        </div>
    </div>
</Layout>

<script>
    async function validateRegister(event) {
        event.preventDefault(); // Evita el envío del formulario

        // Obtener valores de los campos
        const name = document.getElementById("name").value;
        const id = document.getElementById("id").value;
        const email = document.getElementById("email").value;
        const password = document.getElementById("password").value;
        const confirmPassword = document.getElementById("confirm-password").value;
        const errorMessage = document.getElementById("error-message");

        // Validar que las contraseñas coincidan
        if (password !== confirmPassword) {
            errorMessage.classList.remove("hidden");
            errorMessage.textContent = "Las contraseñas no coinciden.";
            return;
        }

        try {
            // Hacer la solicitud al backend
            const response = await fetch("https://certificados-backend.onrender.com/api/auth/register", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json",
                },
                body: JSON.stringify({
                    name: name,
                    id: id,
                    email: email,
                    password: password,
                }),
            });

            const data = await response.json();

            if (!response.ok) {
                throw new Error(data.message || "Error en el registro");
            }

            // Si el registro es exitoso
            errorMessage.classList.add("hidden"); // Ocultar mensaje de error si es visible
            console.log("Registro exitoso!", data.user); // Mensaje de éxito en la consola
            window.location.href = "/login/"; // Redirigir al inicio de sesión
        } catch (error) {
            console.log(error.message); // Mensaje de error en la consola
            errorMessage.classList.remove("hidden"); // Mostrar mensaje de error
            errorMessage.textContent = error.message; // Actualizar mensaje de error
        }
    }

    // Agregar el event listener para el formulario de registro
    document.getElementById("register-form").addEventListener("submit", validateRegister);
</script>


<style>
    .about {
        margin: auto;
        color: white;
        line-height: 1.6;
    }

    .metropedia {
        -webkit-mask-image: linear-gradient(
                to right,
                transparent,
                black 30%,
                black 70%,
                transparent
            ),
            linear-gradient(
                to left,
                transparent,
                black 30%,
                black 70%,
                transparent
            );
        mask-image: linear-gradient(
                to right,
                transparent,
                black 30%,
                black 70%,
                transparent
            ),
            linear-gradient(
                to left,
                transparent,
                black 30%,
                black 70%,
                transparent
            );
    }

    .titulo {
        font-family: "Questrial", system-ui, sans-serif;
    }

    @keyframes bounce {
        0%,
        100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-10px);
        }
    }
    .bounce {
        animation: bounce 1s infinite;
    }
</style>
