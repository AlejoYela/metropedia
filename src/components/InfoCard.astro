---
import CircleCheckIcon from "@icons/CircleCheckIcon.astro"

export interface Props {
  title: string;
  description: string[];
  link: string;
  icono: any;
  color: string;
}

const { title, description, link, icono: Icon, color } = Astro.props;
---

<a
    href={link}
    class="max-w-sm p-6 border border-transparent hover:border-neutral-200 rounded-sm bg-opacity-10 hover:dark:border-white/30 text-start shadow-2xl flex flex-col gap-3 justify-between"
>
    <div class="rounded-sm p-3 w-fit mb-6" style={`background-color: ${color}1A`}> <!-- 1A es el 10% de opacidad en hexadecimal -->
        <Icon class="size-10" style={`stroke: ${color}`} />
    </div>
    <h5
        class="my-2 text-xl font-semibold tracking-wider text-neutral-900 dark:dark:text-white"
    >
        {title}
    </h5>

    <ul class=" font-normal text-neutral-500 dark:text-neutral-400">
        {description.map(item => (
            <li class="mb-1 flex items-center gap-3 text-sm"><CircleCheckIcon fill={color} class="size-5"/>{item}</li>
        ))}
    </ul>
</a>
