---
import FooterSidebar from './FooterSidebar.astro';
import LayoutCommon from '../../layouts/LayoutCommon.astro';
import NavBarSidebar from './NavBarSidebar.astro';
import SideBar from './SideBar.astro';

const { userData } = Astro.props;
console.log('User data de LayoutSidebar: ', userData)
---

<LayoutCommon>
	<NavBarSidebar userData={userData}/>

	<SideBar userData={userData}/>

	<div class="flex pt-16 overflow-hidden bg-neutral-50 dark:bg-neutral-900">
		<div
			id="main-content"
			class="relative w-full h-full overflow-y-auto bg-neutral-50 lg:ml-64 dark:bg-neutral-900 min-h-screen"
		>
			<slot/>

			<FooterSidebar />
		</div>
	</div>
</LayoutCommon>