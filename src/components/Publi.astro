---
import InfoCard from "./InfoCard.astro";
import InfoList from "./InfoList.astro";
import CertificateIcon from "../icons/CertificateIcon.astro";
import CubeIcon from "../icons/CubeIcon.astro";
import StarIcon from "../icons/StarIcon.astro";
import NotebookIcon from "../icons/NotebookIcon.astro";
import SettingsCheckIcon from "../icons/SettingsCheckIcon.astro";
import Categories from "./Categories.astro";

const ownToolsInfo = [
  {
    title: "Didácticos",
    description: [
      "Contenido claro y conciso",
      "Accesible",
      "Interfaz amigable",
    ],
    link: "#",
    icono: CubeIcon,
    color: "#ff7900",
  },
  {
    title: "Profesionales",
    description: [
      "Impartidos por expertos",
      "Experiencia en metrología",
      "Calidad de enseñanza",
    ],
    link: "#",
    icono: StarIcon,
    color: "#60a5fa",
  },
  {
    title: "Actualizados",
    description: [
      "Contenido actualizado",
      "Normativas internacionales",
      "Cumplimiento con estándares",
    ],
    link: "#",
    icono: NotebookIcon,
    color: "#ac94fa",
  },
  {
    title: "Prácticos",
    description: [
      "Ejemplos prácticos",
      "Estudios de caso",
      "Aplicaciones reales",
    ],
    link: "#",
    icono: SettingsCheckIcon,
    color: "#16bdca",
  },
];
---

<div
  class="px-4 w-full max-w-screen-xl md:text-center py-12 lg:py-auto align-middle mx-auto"
>
  <!-- Encabezado y Subtítulo -->
  <div class="flex items-center justify-center mb-4">
    <CertificateIcon class="size-10 sm:size-12 mr-2 stroke-[#fcb316]" />
    <h3
      class="text-xl sm:text-3xl md:text-4xl font-semibold tracking-tight leading-tight dark:text-white text-secondary"
    >
      Desarrolla tus propias habilidades.
    </h3>
  </div>
  <p
    class="mb-6 dark:text-white/40 text-base sm:text-lg md:text-xl font-normal text-neutral-300"
  > 
    Aprende como implementar y aplicar la <span class="text-[#ffd16f]">normativa metrológica</span> en tu contexto
    con los cursos disponibles.
  </p>

  <!-- Tarjetas Responsivas -->
  <div
    class="hidden md:grid grid-cols-2 lg:grid-cols-4 gap-4 mx-auto px-4"
  >
    {
      ownToolsInfo.map((tool) => (
        <InfoCard
          title={tool.title}
          description={tool.description}
          link={tool.link}
          icono={tool.icono}
          color={tool.color}
        />
      ))
    }
  </div>

  

    <ul role="list" class=" md:hidden divide-y divide-[#555555]">
      {
        ownToolsInfo.map((tool)=>(
          <InfoList
            title={tool.title}
            description={tool.description}
            link={tool.link}
            icono={tool.icono}
            color={tool.color}
          />
        ))
      }
    </ul>
 



  <Categories />

  <!-- Botón Más Información -->
  <a
    href="/landing-cursos/"
    class="inline-flex justify-center items-center mt-8 py-2 sm:py-3 px-4 sm:px-5 text-sm sm:text-base font-medium text-center text-secondary hover:dark:text-white rounded-sm bg-[#fcb316] hover:bg-[#fcb316]/60 border border-primary hover:border-white focus:ring-4 focus:ring-amber-300 dark:focus:ring-amber-900"
  >
    Más información
    <svg
      class="w-3 h-3 sm:w-3.5 sm:h-3.5 ms-2 rtl:rotate-180"
      aria-hidden="true"
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 14 10"
    >
      <path
        stroke="currentColor"
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M1 5h12m0 0L9 1m4 4L9 9"></path>
    </svg>
  </a>
</div>
