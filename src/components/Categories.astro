---
import CourseCard from "./CourseCard.astro";
import courseData from "../courseData";

let selectedCategory = "";
---

<div class="min-h-full mt-12">
    <nav class="bg-[#161717] rounded-lg">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
            <div class="flex h-16 items-center justify-between">
                <div class="flex items-center">
                    <div class="shrink-0">
                        <p class="font-semibold text-[#ffd16f]">Categorías</p>
                    </div>
                    <div class="hidden md:block">
                        <div class="ml-10 flex items-baseline space-x-4">
                            <a
                                href="#"
                                class="rounded-md tab-link border hover:border-[#9a9a9a] border-transparent bg-[#252627] px-3 py-2 text-sm font-medium text-white"
                                aria-current="page"
                            >
                                Todos los cursos
                            </a>
                            {
                                [
                                    ...new Set(
                                        courseData.map(
                                            (course) => course.category,
                                        ),
                                    ),
                                ].map((category) => (
                                    <a
                                        href="#"
                                        class="rounded-md tab-link border hover:border-[#9a9a9a] border-transparent bg-[#252627] px-3 py-2 text-sm font-medium text-white"
                                        aria-current="page"
                                    >
                                        {category}
                                    </a>
                                ))
                            }
                        </div>
                    </div>
                </div>
                <div class="-mr-2 flex md:hidden">
                    <!-- Mobile menu button -->
                    <button
                        type="button"
                        class="relative inline-flex items-center justify-center rounded-md bg-[#252627] p-2 text-gray-400 hover:bg-[#9a9a9a] hover:text-white focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-[#252627]"
                        aria-controls="mobile-menu"
                        aria-expanded="false"
                    >
                        <span class="absolute -inset-0.5"></span>
                        <span class="sr-only">Open main menu</span>
                        <!-- Menu open: "hidden", Menu closed: "block" -->
                        <svg
                            class="block h-6 w-6"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke-width="1.5"
                            stroke="currentColor"
                            aria-hidden="true"
                            data-slot="icon"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"
                            ></path>
                        </svg>
                        <!-- Menu open: "block", Menu closed: "hidden" -->
                        <svg
                            class="hidden h-6 w-6"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke-width="1.5"
                            stroke="currentColor"
                            aria-hidden="true"
                            data-slot="icon"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M6 18 18 6M6 6l12 12"></path>
                        </svg>
                    </button>
                </div>
            </div>
        </div>

        <!-- Mobile menu, show/hide based on menu state. -->
        <div class="md:hidden" id="mobile-menu">
            <div class="space-y-1 px-2 pb-3 pt-2 sm:px-3">
                <a
                    href="#"
                    class="tab-link border hover:border-[#9a9a9a] border-transparent block rounded-md bg-[#252627] px-3 py-2 text-base font-medium text-white"
                    aria-current="page">Todos los cursos</a
                >
                {
                    [
                        ...new Set(courseData.map((course) => course.category)),
                    ].map((category) => (
                        <a
                            href="#"
                            class="block tab-link border hover:border-[#9a9a9a] border-transparent rounded-md bg-[#252627] px-3 py-2 text-base font-medium text-white"
                            aria-current="page"
                        >
                            {category}
                        </a>
                    ))
                }
            </div>
        </div>
    </nav>

    <header class="bg-white bg-opacity-5 text-left">
        <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
            <h1 class="text-3xl font-bold tracking-tight text-white">
                Todos los cursos
            </h1>
        </div>
    </header>
    <main class="bg-white bg-opacity-5 shadow-2xl text-left text-[#252627]">
        <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-4 gap-8">
                {
                    courseData
                        .filter(
                            (course) =>
                                selectedCategory === "" ||
                                course.category === selectedCategory,
                        )
                        .slice(0, 4)
                        .map((course) => (
                            <CourseCard
                                id={course.id}
                                name={course.course}
                                img={course.image}
                                description={course.description}
                                category={course.category}
                                price={course.price}
                            />
                        ))
                }
            </div>
        </div>
    </main>
</div>

<script type="module">
    document.addEventListener("DOMContentLoaded", function () {
        const tabLinks = document.querySelectorAll(".tab-link");

        tabLinks.forEach((link, index) => {
            link.addEventListener("click", (e) => {
                e.preventDefault();

                // Quitar la clase 'active' de todas las pestañas y contenido oculto
                tabLinks.forEach((link) => link.classList.remove("active"));

                // Agregar clase 'active' a la pestaña seleccionada y mostrar contenido correspondiente
                link.classList.add("active");
            });
        });
    });
</script>
