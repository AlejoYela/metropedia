---
import MeasureIcon from "../icons/MeasureIcon.astro";
import NotebookIcon from "../icons/NotebookIcon.astro";
import ScaleIcon from "../icons/ScaleIcon.astro";
import UncertainlyIcon from "../icons/UncertainlyIcon.astro";
import InfoCard from "./InfoCard.astro";

const {view} = Astro.props

const coursesInfo = [
  {
    title: "Metrología básica",
    description: [
      "Conceptos fundamentales",
      "Importancia y aplicaciones",
      "Historia y evolución",
    ],
    link: "#",
    icono: MeasureIcon,
    color: "#ff7900",
  },
  {
    title: "VIM",
    description: [
      "Conceptos fundamentales",
      "Importancia y aplicaciones",
      "Historia y evolución",
    ],
    link: "#",
    icono: NotebookIcon,
    color: "#60a5fa",
  },
  {
    title: "ISO/IEC 10012:2003",
    description: [
      "Conceptos fundamentales",
      "Importancia y aplicaciones",
      "Historia y evolución",
    ],
    link: "#",
    icono: ScaleIcon,
    color: "#ac94fa",
  },
  {
    title: "Incertidumbre",
    description: [
      "Ejemplos prácticos",
      "Estudios de caso",
      "Aplicaciones reales",
    ],
    link: "#",
    icono: UncertainlyIcon,
    color: "#16bdca",
  },
];
---

<div class="pb-24 w-full max-w-screen-xl align-middle mx-auto text-center my-0">
  <!-- Título principal -->
  <h3 class="text-white font-semibold text-xl sm:text-2xl">Cursos populares</h3>
  <h3 class="text-[#9a9a9a] text-base sm:text-lg">
    Las habilidades profesionales más valoradas
  </h3>

  <!-- Grid de InfoCards con configuración responsive -->
  <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-4 mx-4 my-6">
    {
      coursesInfo.map((tool) => (
        <InfoCard
          title={tool.title}
          description={tool.description}
          link={tool.link}
          icono={tool.icono}
          color={tool.color}
        />
      ))
    }
  </div>
</div>

<style>
  /* Mantener el estilo general igual */
  .text-white {
    color: #ffffff;
  }

  /* Ajuste de estilo para el título en diferentes pantallas */
  .text-xl {
    font-size: 1.25rem;
  }
  .text-lg {
    font-size: 1.125rem;
  }

  /* Opcional: Mejorar el espaciado en dispositivos más pequeños */
  .mx-4 {
    margin-left: 1rem;
    margin-right: 1rem;
  }
</style>
