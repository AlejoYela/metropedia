---
import Card from "./Card.astro";
import CalculatorIcon from "../icons/CalculatorIcon.astro";
import GraphicIcon from "../icons/GraphicIcon.astro";
import ArrowsIcon from "../icons/ArrowsIcon.astro";
import ToolIcon from "../icons/ToolIcon.astro";

const tools = [
  { title: "Cifras Significativas", description: "Herramienta para calcular cifras significativas en mediciones.", icon: CalculatorIcon, class: 'Calculadora', color: '#60a5fa' },
  { title: "Incertidumbre", description: "Calcula la incertidumbre en tus mediciones.", icon: CalculatorIcon, class: 'Calculadora', color: '#60a5fa' },
  { title: "Unidades", description: "Convierte unidades de diversas magnitudes.", icon: ArrowsIcon, class: 'Conversor', color: '#fcb316' },
  { title: "Media y Desviación", description: "Calcula la media y desviación estándar de un conjunto de datos.", icon: CalculatorIcon, class: 'Calculadora', color: '#60a5fa' },
  { title: "Generador de Gráficos", description: "Genera gráficos para visualizar datos metrológicos.", icon: GraphicIcon, class: 'Graficador', color: '#86efac' },
  { title: "Error Relativo", description: "Calcula el error relativo en tus mediciones.", icon: CalculatorIcon, class: 'Calculadora', color: '#60a5fa' },
];
---

<div class="h-full flex items-center justify-center">
  <div>
    <div class="flex items-center justify-center mb-7">
      <ToolIcon class="size-12 mr-2 stroke-[#fcb316]" />
      <h3 class="text-5xl font-semibold tracking-wider">Herramientas más usadas.</h3>
    </div>
    <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
      {tools.map((tool) => (
        <Card title={tool.title} description={tool.description} icon={tool.icon} clase={tool.class} color={tool.color} />
      ))}
    </div>
  </div>
</div>
